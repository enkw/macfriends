<body>
  <!-- Fixed navbar -->
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Admin page</a>
      </div>
    </div>
  </div>

    <div class="container w">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>tweet_id</th>
            <th>screen_name</th>
            <th>tweet_text</th>
            <th>media_url</th>
            <th><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></th>
          </tr>
        </thead>
        <tbody>
          <% @admin.each do |row| %>
          <tr data-id="<%= row.id %>">
              <td><%= row.tweet_id %></td>
              <td><a href="http://twitter.com/<%= row.screen_name %>">@<%= row.screen_name %></a></td>
              <td><%= row.tweet_text %></td>
              <td><a href="<%= row.media_url %>"><%= row.media_url %></a></td>
              <!-- <form method="post" action="del">
                <td><input type="submit" value="削除"></td>
                <input type="hidden" name="tweet_id" value="<%= row.tweet_id %>">
                <input type="hidden" name="_method" value="delete">
              </form> -->
              <!-- <td><span class="deleteCmd"style="cursor:pointer;color:blue">[x]</span></td> -->
              <td><span class="deleteCmd glyphicon glyphicon-remove" aria-hidden="true" style="cursor:pointer"></span></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div id="f">
      <div class="container">
        <div class="row centered">
          <p>Translate by <a href="https://twitter.com/nanophate">@nanophate</a> 2015</p>
          <p>© <a href="https://twitter.com/enkw_">Naoto Enokawa</a> 2015</p>
        </div><!-- row -->
      </div><!-- container -->
    </div><!-- Footer -->

    <script>
      $('.deleteCmd').click(function() {
        var el = $(this).parent().parent();

        //var el = document.getElementsByClassName('deleting');
        if (confirm('are you sure to delete?')){
          $.post('/delete', {
            tweet_id: el.data('id')
          }, function() {
            el.fadeOut(800);
          });
        }
      })
    </script>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="js/bootstrap1.min.js"></script>
</body>
