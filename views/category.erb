    </div>
</div><!-- container -->
  <script>
  $('#myTabs a').click(function (e) {
    e.preventDefault();

    var url = $(this).attr("data-url");
    var href = this.hash;
    var pane = $(this);

    // ajax load from data-url
    $(href).load(url,function(result){
      pane.tab('show');
    });
  });

  // load first tab content
  $('#home').load($('.active a').attr("data-url"),function(result){
    $('.active a').tab('show');
  });

  </script>


<script>
  $(function() {
    var tag = $("li.tag");
    // console.log($("li.tag"+"#dj"));
    tag.on("click", function() {
      if(this.id === "home") {
        return;
      }
        var $this = $(this);
        var str = $this.text();
        var param = str.substr(1);
        var uri = "/test2/" + param;
        $.ajax({
          type: "GET",
          url: uri,
          success: function(response) {
            var response2 = '';
            for(var i = 0; i < response.length; i++){
              response2 += '<div>';
              response2 += '<div class="col-lg-6">';
              response2 += '<h2 class = "spot"><a href="https://twitter.com/'+response[i].screen_name+'">'+'@'+response[i].screen_name+'</a></h2>';
              response2 += '<p>'+response[i].tweet_text+'</p>';
              response2 += '<div id = "media">';
              response2 += '<a href="'+response[i].media_url+'" data-lightbox="image-i" data-title="'+response[i].media_url+'"><img class = "box" src="'+response[i].media_url+'"></a>';
              response2 += '</div>';
              response2 += '<p>'+response[i].created_at+'</p>';
              response2 += '</div>';
              response2 += '</div>';
            }
            $("div.content#"+param).replaceWith(response2);
          },
          // error: function(message){
          //   alert(message);
          // }
      })
    });
  });
</script>

