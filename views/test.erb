            <a href="/"><img src="https://s3-ap-northeast-1.amazonaws.com/macfriends.net/logo.png"></a>
        </div>

        <div class="jumbotron">
            <h3>Community starts with friendship! <a href="/about" class="btn btn-primary btn-lg" role="button">Learn more &raquo;</a><img alt="Macbook illust" src="https://s3-ap-northeast-1.amazonaws.com/macfriends.net/mac.png" width="200px" style="float:right"></h3>
            <p>Share your sticker on Macbook with the hashtag <a href="https://twitter.com/MacFriends_">#MacFriends</a></p>
        </div>
	
		
		<div class="row">
            <% @timeline.each do |res| %>
                <% if res.retweeted_tweet.media[0] != nil %>
				<% if res.retweeted_tweet.user.screen_name.to_s != '' %>
                    	<div class="col-xs-12 col-sm-6 col-md-6" >
							
							<% if res.retweeted_tweet.media[0] %>							
								<h2><a href="https://twitter.com/<%= "#{res.retweeted_tweet.user.screen_name}" %>">@<%= "#{res.retweeted_tweet.user.screen_name}" %></a></h2>
                            	<p><%= res.retweeted_tweet.text %></p>
								<div id = "media">
								<img class = "box" src="<%= res.retweeted_tweet.media[0].media_url %>">
								</div>
								<p><%= "#{res.retweeted_tweet.created_at}" %></p>
							<% elsif res.retweeted_tweet.url %>
								<hoge href ="<%= res.retweeted_tweet.media[0].media_url %>"></hoge>						
							<% end %>	
                    	</div>
                <% end %>
				<% end %>
            <% end %>
        </div>


